<body>
<div id="sticky-anchor"></div>
<div id="sticky">
	<div id="main_title">My Playlist Selector</div>


	<form id="searchForm" action="http://127.0.0.1:8080/process_get" method="GET">
	<h5>Choose an artist:</h5>
		<div class="dropdown">
			<input class="span2" id="search_type" name="artist" type="hidden">
			
		  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" onchange="this.form.submit()">
		  	<% var name = artist_single.replace(/%20/g, " ") %>
		    <%= name %>
		    <span class="caret"></span>
		  </button>

		  <ul id="drop" class="dropdown-menu" aria-labelledby="dropdownMenu1">
		    <% if (artist.length) { %>

			    <% artist.forEach(function(artist){ %>
			    	<% var string = artist.replace(/%20/g, " ") %>
				    <li onclick="$('#search_type').val('<%= artist %>'); $('#searchForm').submit()"><%= string %></li>
				    <% }) %>
	    	<% } %>
		  </ul>

		</div>
	</form>
</div>


