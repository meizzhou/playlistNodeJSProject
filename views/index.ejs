<!-- front end of the application -->
<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />
 	<meta http-equiv="X-UA-Compatible" content="chrome=1">
  	<meta name="google" value="notranslate">
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
	<link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="styles/style.css">
	

</head>
<body>
<div id="sticky-anchor"></div>
<div id="sticky">
	<div id="main_title">My Playlist Selector</div>

	<form id="searchForm" action="http://127.0.0.1:8080/process_get" method="GET">
	<h5>Choose an artist:</h5>
		<div class="dropdown">
			<input class="span2" id="search_type" name="artist" type="hidden">
			
		  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" onchange="this.form.submit()">

		  	<!-- display the selected artist in the dropdown menu -->
		    <%= artist_single %>
		    <span class="caret"></span>
		  </button>

		  <!-- display the entire list of the artist -->
		  <ul id="drop" class="dropdown-menu" aria-labelledby="dropdownMenu1">
		    <% if (artist.length) { %>

			    <% artist.forEach(function(artist){ %>
			    	
				    <li onclick="$('#search_type').val('<%= artist %>'); $('#searchForm').submit()"><%= artist %></li>
				    <% }) %>
	    	<% } %>
		  </ul>

		</div>
	</form>
</div>

<!-- display the videos of the selected artist-->
<div id = "videos_div">
<% if (array.length) { %>
  <ul id="video_list">
       <% array.forEach(function(array){ %>
       <li><iframe width="560" height="315" src= "https://www.youtube.com/embed/<%= array %>" frameborder="0" allowfullscreen></iframe></li>
       <p></p>
    <% }) %>
  </ul>
<% } %>
<p></p>
</div>

	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.3/angular-route.min.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	<script src="styles/extra.js"></script>

</body>
</html>